<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/telainicial"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/telainicial"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookAppReview"
        tools:targetApi="31">
        <activity
            android:name=".presentation.activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.ReviewLivroActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activity.LivroDetalhesActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activity.AddLivroActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".presentation.activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activity.CadastroUsuarioActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activity.TelaLoginActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>